<?xml version="1.0" encoding="UTF-8"?>
<log4g:configuration debug="true" reset="true"
	xmlns:log4g="http://mike.steinert.ca/log4g/1.0/">
	<appender type="Log4gFileAppender" name="A1">
		<property name="file" value="perf-001.txt" />
		<property name="append" value="false" />
		<property name="buffered-io" value="false" />
		<layout type="Log4gPatternLayout">
			<property name="conversion-pattern" value="%m%n" />
		</layout>
	</appender>
	<root>
		<level value="ALL" />
		<appender name="A1" />
	</root>
</log4g:configuration>
