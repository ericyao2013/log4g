<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4g:configuration PUBLIC "-//GNOME//DTD LOG4G 1.0//EN"
    "http://www.gnome.org/log4g/1.0/log4g.dtd">
<!--
-->
<log4g:configuration debug="true" reset="true">
    <!-- comment -->
    <appender type="Log4gConsoleAppender" name="A1">
        <property name="follow" value="false" />
        <property name="target" value="stderr" />
        <layout type="Log4gPatternLayout">
            <property name="conversion-pattern"
                      value="%r %-5p [%t] %c{2} (%F:%L) - %m%n" />
        </layout>
        <filter type="Log4gStringMatchFilter">
            <property name="string-to-match" value="match this string" />
            <property name="accept-on-match" value="true" />
        </filter>
        <filter type="Log4gDenyAllFilter" />
    </appender>
    <appender type="Log4gAsyncAppender" name="A2">
        <appender name="A1" />
    </appender>
    <logger name="org.gnome.test" additivity="true">
        <level value="TRACE" />
        <appender type="Log4gFileAppender">
            <property name="file" value="dom-configurator-001.txt" />
            <layout type="Log4gTTCCLayout" />
        </appender>
    </logger>
    <root>
        <level value="ALL" />
        <appender name="A2" />
    </root>
</log4g:configuration>
